{
  "manifest_version": 3,
  "name": "Plaid",
  "description": "Make the Internet go Plaid",
  "version": "1.0",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
	"web_accessible_resources": [
	    {
	      "resources": ["images/plaid.jpeg"],
	      "matches": ["<all_urls>"]
	    }
	]
}
